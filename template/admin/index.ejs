<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style media="screen">
    </style>
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <form action="?" method="post" enctype="multipart/form-data">
            图片的src：<input type="file" name="src" /><br>
            标题：<input type="text" name="title" /><br>
            课程描述：<input type="text" name="summary" /><br>
            标签1：<input type="text" name="tag1" /><br>
            标签2：<input type="text" name="tag2" /><br>
            人数：<input type="text" name="number" /><br>
            链接：<input type="text" name="href" /><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>图片的src</th>
              <th>标题</th>
              <th>课程描述</th>
              <th>标签1</th>
              <th>标签2</th>
              <th>人数</th>
              <th>链接</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<home.length;i++){ %>
            <tr>
              <td><%=home[i].ID%></td>
              <td><img width="32" height="32" src="/upload/<%=home[i].src%>"/></td>
              <td><%=home[i].title%></td>
              <td><%=home[i].summary%></td>
              <td><%=home[i].tag1%></td>
              <td><%=home[i].tag2%></td>
              <td><%=home[i].number%></td>
              <td><%=home[i].href%></td>
              <td>
                <a href="?act=mod&id=<%=home[i].ID%>">修改</a>
                <a href="?act=del&id=<%=home[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
